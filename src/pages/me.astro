<script>
  document
    .querySelectorAll(".timeline-role[data-expandable]")
    .forEach((item) => {
      item.addEventListener("click", () => {
        item.classList.toggle("expanded");
      });
    });

  // Hackathons: only one expanded at a time
  const hackathonItems = Array.from(
    document.querySelectorAll(".hackathon-item[data-expandable]"),
  );

  // Check if we're in multi-column layout (matches CSS breakpoint)
  const isMultiColumn = () => window.innerWidth > 768;

  // Store original positions
  hackathonItems.forEach((item, index) => {
    item.style.order = index;
  });

  hackathonItems.forEach((item, index) => {
    item.addEventListener("click", () => {
      const wasExpanded = item.classList.contains("expanded");

      // Reset all orders and close all
      hackathonItems.forEach((other, idx) => {
        other.classList.remove("expanded");
        other.style.order = idx;
      });

      // Toggle clicked item
      if (!wasExpanded) {
        item.classList.add("expanded");

        // Only swap order if we're in multi-column layout (not mobile)
        // If right column (odd index), swap order with left neighbor so it appears first in its row
        if (isMultiColumn() && index % 2 === 1) {
          const leftItem = hackathonItems[index - 1];
          if (leftItem) {
            item.style.order = index - 1;
            leftItem.style.order = index;
          }
        }
      }
    });
  });
</script>
