---
interface Props {
  title: string;
  description: string;
  href: string;
  image?: string;
  technologies?: string[];
  theme?: "light" | "dark";
}

const {
  title,
  description,
  href,
  image,
  technologies = [],
  theme = "dark",
} = Astro.props;
---

<a href={href} class={`project-card ${theme}`}>
  {image && <img src={image} alt={title} class="card-bg" loading="lazy" />}
  <div class="card-overlay"></div>
  <div class="card-content">
    <h3 class="card-title">{title}</h3>
    <p class="card-description">{description}</p>
    {
      technologies.length > 0 && (
        <div class="card-tech">
          {technologies.slice(0, 4).map((tech) => (
            <span class="tech-tag">{tech}</span>
          ))}
        </div>
      )
    }
  </div>
  <svg
    class="card-arrow"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
  >
    <line x1="5" y1="12" x2="19" y2="12"></line>
    <polyline points="12 5 19 12 12 19"></polyline>
  </svg>
</a>

<style>
  .project-card {
    position: relative;
    display: block;
    aspect-ratio: 16 / 10;
    border-radius: var(--radius-xl);
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    background-color: #000000;
  }

  .project-card.light {
    background-color: #ffffff;
  }

  .card-bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
    border-radius: inherit;
  }

  .project-card:hover .card-bg {
    transform: scale(1.08);
  }

  /* Gradient overlay - dark theme (bia≈Çy tekst) */
  .card-overlay {
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 1) 0%,
      rgba(0, 0, 0, 0.85) 25%,
      rgba(0, 0, 0, 0.4) 55%,
      transparent 100%
    );
    transition: opacity 0.3s ease;
  }

  .project-card:hover .card-overlay {
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 1) 0%,
      rgba(0, 0, 0, 0.9) 30%,
      rgba(0, 0, 0, 0.5) 60%,
      transparent 100%
    );
  }

  /* Light theme (ciemny tekst) */
  .project-card.light .card-overlay {
    background: linear-gradient(
      to top,
      rgba(255, 255, 255, 0.98) 0%,
      rgba(255, 255, 255, 0.85) 30%,
      rgba(255, 255, 255, 0.4) 60%,
      transparent 100%
    );
  }

  .project-card.light:hover .card-overlay {
    background: linear-gradient(
      to top,
      rgba(255, 255, 255, 1) 0%,
      rgba(255, 255, 255, 0.9) 35%,
      rgba(255, 255, 255, 0.5) 65%,
      transparent 100%
    );
  }

  .card-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: var(--space-6);
    color: white;
    z-index: 1;
  }

  .project-card.light .card-content {
    color: #18181b;
  }

  .card-title {
    font-size: var(--text-xl);
    font-weight: 600;
    margin-bottom: var(--space-2);
    line-height: 1.3;
  }

  .card-description {
    font-size: var(--text-sm);
    opacity: 0.85;
    margin-bottom: var(--space-3);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    color: inherit;
  }

  .card-tech {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .tech-tag {
    display: inline-flex;
    padding: var(--space-1) var(--space-2);
    font-size: var(--text-xs);
    font-weight: 500;
    background-color: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(4px);
    border-radius: var(--radius-sm);
    color: inherit;
    opacity: 0.9;
  }

  .project-card.light .tech-tag {
    background-color: rgba(0, 0, 0, 0.08);
  }

  .card-arrow {
    position: absolute;
    top: var(--space-4);
    right: var(--space-4);
    width: 28px;
    height: 28px;
    padding: var(--space-1);
    background-color: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(4px);
    border-radius: var(--radius-full);
    color: white;
    opacity: 0;
    transform: translateX(-8px);
    transition: all 0.3s ease;
    z-index: 1;
  }

  .project-card.light .card-arrow {
    background-color: rgba(0, 0, 0, 0.1);
    color: #18181b;
  }

  .project-card:hover .card-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  /* Subtle border glow on hover */
  .project-card::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: var(--radius-xl);
    border: 1px solid transparent;
    transition: border-color 0.3s ease;
    pointer-events: none;
  }

  .project-card:hover::after {
    border-color: rgba(255, 255, 255, 0.2);
  }

  .project-card.light:hover::after {
    border-color: rgba(0, 0, 0, 0.1);
  }
</style>
