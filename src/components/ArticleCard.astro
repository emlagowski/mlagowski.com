---
interface Props {
  title: string;
  description: string;
  href: string;
  date: Date;
  tags?: string[];
  coverImage?: string;
  theme?: "light" | "dark";
}

const {
  title,
  description,
  href,
  date,
  tags = [],
  coverImage,
  theme = "dark",
} = Astro.props;

const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "short",
  day: "numeric",
});

const hasCover = !!coverImage;
// Ensure cover image path starts with /
const coverImagePath = coverImage?.startsWith("/")
  ? coverImage
  : `/${coverImage}`;
---

{
  hasCover ? (
    <a href={href} class={`article-card article-card-cover ${theme}`}>
      <img src={coverImagePath} alt={title} class="card-bg" loading="lazy" />
      <div class="card-overlay" />
      <div class="card-content">
        <time class="article-date">{formattedDate}</time>
        <h3 class="card-title">{title}</h3>
        <p class="card-description">{description}</p>
        {tags.length > 0 && (
          <div class="card-tags">
            {tags.slice(0, 3).map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </div>
      <svg
        class="card-arrow"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
      >
        <line x1="5" y1="12" x2="19" y2="12" />
        <polyline points="12 5 19 12 12 19" />
      </svg>
    </a>
  ) : (
    <a href={href} class="article-card">
      <div class="article-content">
        <time class="article-date">{formattedDate}</time>
        <h3 class="article-title">{title}</h3>
        <p class="article-description">{description}</p>
        {tags.length > 0 && (
          <div class="article-tags">
            {tags.slice(0, 3).map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </div>
      <svg
        class="article-arrow"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
      >
        <line x1="5" y1="12" x2="19" y2="12" />
        <polyline points="12 5 19 12 12 19" />
      </svg>
    </a>
  )
}

<style>
  /* === Default card (no cover) === */
  .article-card {
    display: flex;
    align-items: center;
    padding: var(--space-5);
    background-color: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    text-decoration: none;
    color: inherit;
    transition: all var(--transition-base);
  }

  .article-card:hover {
    border-color: var(--color-text-muted);
    transform: translateX(4px);
  }

  .article-content {
    flex: 1;
  }

  .article-date {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .article-title {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-text);
    margin: var(--space-1) 0 var(--space-2);
  }

  .article-description {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-3);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .article-arrow {
    width: 24px;
    height: 24px;
    color: var(--color-text-muted);
    transition: transform var(--transition-base);
    flex-shrink: 0;
    margin-left: var(--space-4);
  }

  .article-card:hover .article-arrow {
    transform: translateX(4px);
    color: var(--color-accent);
  }

  /* === Cover image card === */
  .article-card-cover {
    position: relative;
    display: block;
    aspect-ratio: 16 / 10;
    border-radius: var(--radius-xl);
    overflow: hidden;
    padding: 0;
    background-color: #000000;
    border: none;
  }

  .article-card-cover:hover {
    transform: none;
    border-color: transparent;
  }

  .article-card-cover.light {
    background-color: #ffffff;
  }

  .card-bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
    border-radius: inherit;
  }

  .article-card-cover:hover .card-bg {
    transform: scale(1.08);
  }

  /* Gradient overlay - dark theme */
  .card-overlay {
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 1) 0%,
      rgba(0, 0, 0, 0.85) 25%,
      rgba(0, 0, 0, 0.4) 55%,
      transparent 100%
    );
    transition: opacity 0.3s ease;
  }

  .article-card-cover:hover .card-overlay {
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 1) 0%,
      rgba(0, 0, 0, 0.9) 30%,
      rgba(0, 0, 0, 0.5) 60%,
      transparent 100%
    );
  }

  /* Light theme */
  .article-card-cover.light .card-overlay {
    background: linear-gradient(
      to top,
      rgba(255, 255, 255, 0.98) 0%,
      rgba(255, 255, 255, 0.85) 30%,
      rgba(255, 255, 255, 0.4) 60%,
      transparent 100%
    );
  }

  .article-card-cover.light:hover .card-overlay {
    background: linear-gradient(
      to top,
      rgba(255, 255, 255, 1) 0%,
      rgba(255, 255, 255, 0.9) 35%,
      rgba(255, 255, 255, 0.5) 65%,
      transparent 100%
    );
  }

  .card-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: var(--space-6);
    color: white;
    z-index: 1;
  }

  .article-card-cover.light .card-content {
    color: #18181b;
  }

  .article-card-cover .article-date {
    color: inherit;
    opacity: 0.75;
  }

  .card-title {
    font-size: var(--text-xl);
    font-weight: 600;
    margin: var(--space-1) 0 var(--space-2);
    line-height: 1.3;
  }

  .card-description {
    font-size: var(--text-sm);
    opacity: 0.85;
    margin-bottom: var(--space-3);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    color: inherit;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .article-card-cover .tag {
    display: inline-flex;
    padding: var(--space-1) var(--space-2);
    font-size: var(--text-xs);
    font-weight: 500;
    background-color: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(4px);
    border-radius: var(--radius-sm);
    color: inherit;
    opacity: 0.9;
  }

  .article-card-cover.light .tag {
    background-color: rgba(0, 0, 0, 0.08);
  }

  .card-arrow {
    position: absolute;
    top: var(--space-4);
    right: var(--space-4);
    width: 28px;
    height: 28px;
    padding: var(--space-1);
    background-color: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(4px);
    border-radius: var(--radius-full);
    color: white;
    opacity: 0;
    transform: translateX(-8px);
    transition: all 0.3s ease;
    z-index: 1;
  }

  .article-card-cover.light .card-arrow {
    background-color: rgba(0, 0, 0, 0.1);
    color: #18181b;
  }

  .article-card-cover:hover .card-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  /* Subtle border glow on hover */
  .article-card-cover::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: var(--radius-xl);
    border: 1px solid transparent;
    transition: border-color 0.3s ease;
    pointer-events: none;
  }

  .article-card-cover:hover::after {
    border-color: rgba(255, 255, 255, 0.2);
  }

  .article-card-cover.light:hover::after {
    border-color: rgba(0, 0, 0, 0.1);
  }
</style>
